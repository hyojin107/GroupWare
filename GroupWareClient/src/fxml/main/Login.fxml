<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.mainCtr.LoginController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#f4f4f4" height="286.0" layoutX="-1.0" layoutY="314.0" stroke="#ffffff00" strokeType="INSIDE" width="801.0" />
