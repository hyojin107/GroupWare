            <ImageView fitHeight="344.0" fitWidth="801.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/login.jpg" />
               </image>
            </ImageView>
            <Label text="LOGIN">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets left="100.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#639ed6c2" height="4.0" stroke="BLACK" strokeType="INSIDE" width="145.0">
               <VBox.margin>
                  <Insets left="100.0" top="5.0" />
               </VBox.margin>
            </Rectangle>
            <TextField fx:id="tf_id" prefHeight="30.0" promptText="아이디">
